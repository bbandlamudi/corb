<project name="corb" basedir="." default="jar">
  <property name="name" value="corb"/>
	<property name="version" value="1.1"/>
  <property file="build.properties"/>

  <property name="src.dir" value="java"/>
  <property name="dist.dir" value="../lib"/>
  <property name="build.dir" value="${src.dir}"/>

  <path id="master-classpath">
    <fileset dir="${java.library.user}">
      <include name="xcc.jar"/>
    </fileset>
    <fileset dir="${java.library.system}">
      <include name="xcc.jar"/>
    </fileset>
    <pathelement path="${build.dir}"/>
  </path>
	
  <target name="clean">
	<delete dir="${dist.dir}"/>
  	<delete>
  		<fileset dir="${build.dir}" includes="**/*.class"/>
  	</delete>
  </target>

  <target name="build"
          description="Compile main source tree java files">
    <mkdir dir="${build.dir}"/>
    <javac destdir="${build.dir}" target="1.5" source="1.5"
           debug="true"
           includeantruntime="false">
      <compilerarg value="-Xlint"/>
      <src path="${src.dir}"/>
      <classpath refid="master-classpath"/>
    </javac>
  </target>

  <target name="jar" depends="build"
          description="generate the jarfile">
    <mkdir dir="${dist.dir}"/>
    <jar jarfile="${dist.dir}/${name}-${version}.jar" basedir="${build.dir}"
         compress="true" index="true"
         excludes="*.java,*.class,**/.*,**/*~"/>
  </target>

</project>
